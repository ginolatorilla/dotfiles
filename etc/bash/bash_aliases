alias df="df --human-readable"
alias e="echo"
alias ee="echo -e"
alias en="echo -n"
alias f="find"
alias ff="find . -name"
alias ft="file --mime"
alias fr="free --giga"
alias he="head"
alias he1="head --lines 1"
alias hn="hostname"
alias hx="hexdump"
alias l="ls"
alias la="ls -a"
alias ll="ls -l"
alias lla="ls -al"
alias le="less -rq"
alias mv="mv -i"
alias mkdir="mkdir -p"
alias n="nslookup"
alias o="openssl"
alias ox="openssl x509 -noout -text"
alias p="pwd"
alias qq="quit"
alias py="python3"
alias ps="ps -a"
