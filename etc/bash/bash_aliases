alias y2j="python3 -c 'import sys,yaml,json; print(json.dumps(yaml.safe_load(str(sys.stdin.read()))))'"
alias j2y="python3 -c 'import sys,yaml,json,collections; print(yaml.dump(json.loads(sys.stdin.read()), sort_keys=False))'"
