# Linux terminal
alias ..='cd ..'
alias ...='cd ../..'

alias cx='chmod a+x'
alias ff='find . -name'
alias grr='grep --exclude-dir=.git --exclude-dir=.svn -PR'
alias l='ls -lah'
alias ase='apt search'
alias sai='sudo apt install -y'
alias sar='sudo apt remove'
alias saar='sudo apt autoremove'
alias sap='sudo apt purge'
alias sau='sudo apt update'
alias sizeof='du --bytes --summarize'
alias t=top
alias v=vi
alias w=which
alias xtgz='tar -zxvf'

# Git
alias g='git'
alias ga='git add'
alias gc='git clone'
alias gci='git commit'
alias gd='git diff --color-words'
alias gl='git log --oneline --decorate'
alias gll="git log --oneline --decorate --graph"
alias gp='git pull'
alias gpu='git push -u origin master'
alias gr='git revert'
alias grm='git rm'
alias gs='git status'
alias gss='git status -sb'
