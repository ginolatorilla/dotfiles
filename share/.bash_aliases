# Linux Aliases
alias ..="cd .."
alias ...="cd ../.."
alias ..2="cd ../.."
alias ..3="cd ../../.."
alias ..4="cd ../../../.."
alias ..5="cd ../../../../.."
alias c="cat"
alias chm="chmod"
alias cho="chown"
alias cp="cp -i"
alias cu="curl"
alias du="du --human-readable --summarize"
alias df="df --human-readable"
alias e="echo"
alias ee="echo -e"
alias en="echo -n"
alias f="find"
alias ff="find . -name"
alias ft="file --mime"
alias fr="free --giga"
alias g="grep"
alias h="help"
alias k="kill"
alias kk="kill -KILL"
alias ka="killall"
alias l="ls"
alias la="ls -a"
alias ll="ls -l"
alias lla="ls -al"
alias le="less"
alias mv="mv -i"
alias mkdir="mkdir -p"
alias he="head"
alias he1="head --lines 1"
alias hn="hostname"
alias hx="hexdump"
alias p="pwd"
alias qq="quit"
alias py="python3"
alias ps="ps -a"
alias r="readlink -f"
alias rm="rm -i"
alias rs="rsync --progress"
alias s="sed"
alias S="sudo"
alias t="touch"
alias ta="tail"
alias ta1="tail --lines 1"
alias u="uname -a"
alias us="users"
alias v="vim"
alias wh="which"

# Apt Aliases
alias sai="sudo apt install"
alias sau="sudo apt update"
alias sap="sudo apt purge"

# Git Aliases
alias ga="git add"
alias gc="git clone"
alias gcl="git clean -ffxd"
alias gci="git commit"
alias gco="git checkout"
alias gd="git diff"
alias gf="git fetch"
alias gl="git log"
alias gll="git log --oneline --graph --decorate"
alias gp="git pull --ff-only"
alias gpr="git pull --rebase"
alias gpu="git push --set-upstream origin"
alias grm="git remove"
alias gre="git reset"
alias greh="git reset --hard"
alias grb="git rebase --interactive"
alias grba="git rebase --abort"
alias grbc="git rebase --continue"
alias grbs="git rebase --skip"
alias grv="git revert --no-edit"
alias grva="git revert --abort"
alias gs="git status"
alias gss="git status --short --branch"

# Docker Aliases
alias dru="docker container run -it --rm"
alias dil="docker image ls"
alias dcl="docker container ls -a"
alias drm="docker container rm"
alias dex="docker exec -it"
alias dsp="docker system prune --all --volumes"
